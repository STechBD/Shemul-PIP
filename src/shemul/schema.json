{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shemul Config",
  "type": "object",
  "required": ["commands"],
  "properties": {
    "$schema": {"type": "string"},
    "name": {"type": "string"},
    "version": {"type": "string"},
    "runtime": {"type": "string"},
    "env": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "vars": {
      "type": "object",
      "additionalProperties": {"type": ["string", "number", "boolean"]}
    },
    "commands": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["run"],
        "properties": {
          "run": {"type": "string"},
          "desc": {"type": "string"},
          "env": {"type": "string"},
          "group": {"type": "string"},
          "confirm": {"type": "boolean"},
          "danger": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
